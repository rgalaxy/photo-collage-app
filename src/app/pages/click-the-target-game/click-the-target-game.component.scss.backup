// Component-specific styles for Click The Target Game

.game-area {
  position: relative;
  overflow: hidden;
  user-select: none;
  -webkit-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  
  // Ensure smooth cursor transitions
  transition: cursor 0.1s ease;
  
  // Custom crosshair cursor
  cursor: crosshair;
  
  // Prevent text selection and context menu
  -webkit-touch-callout: none;
  -webkit-user-select: none;
  -khtml-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
  
  // Disable right-click context menu
  &::-webkit-context-menu {
    display: none;
  }
}

// Target styles
.target {
  position: absolute;
  border-radius: 50%;
  transition: all 0.1s ease;
  cursor: pointer;
  user-select: none;
  
  // Prevent target from being dragged
  -webkit-user-drag: none;
  -khtml-user-drag: none;
  -moz-user-drag: none;
  -o-user-drag: none;
  
  // Add subtle glow effect
  box-shadow: 
    0 0 20px rgba(255, 255, 255, 0.3),
    0 0 40px rgba(255, 0, 0, 0.2),
    inset 0 0 10px rgba(255, 255, 255, 0.1);
  
  // Hover effects
  &:hover {
    transform: scale(1.1);
    box-shadow: 
      0 0 30px rgba(255, 255, 255, 0.5),
      0 0 60px rgba(255, 0, 0, 0.3),
      inset 0 0 15px rgba(255, 255, 255, 0.2);
  }
  
  // Active/clicked state
  &:active {
    transform: scale(0.95);
  }
}

// Countdown ring animation
.countdown-ring {
  position: absolute;
  inset: 0;
  border-radius: 50%;
  border: 4px solid rgba(255, 255, 0, 0.8);
  animation: countdown linear;
  
  &::after {
    content: '';
    position: absolute;
    inset: -4px;
    border-radius: 50%;
    border: 2px solid rgba(255, 255, 255, 0.3);
  }
}

// Toast notification styles
.toast {
  animation: slideInRight 0.3s ease-out;
  
  &.success {
    background: linear-gradient(135deg, #10b981, #059669);
  }
  
  &.error {
    background: linear-gradient(135deg, #ef4444, #dc2626);
  }
  
  &.info {
    background: linear-gradient(135deg, #3b82f6, #2563eb);
  }
}

@keyframes slideInRight {
  from {
    transform: translateX(100%);
    opacity: 0;
  }
  to {
    transform: translateX(0);
    opacity: 1;
  }
}

// Modal backdrop blur effect
.modal-backdrop {
  backdrop-filter: blur(8px);
  -webkit-backdrop-filter: blur(8px);
}

// Glass morphism effect for modals and cards
.glass {
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.2);
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
}

// Difficulty selector styles
.difficulty-selector {
  .difficulty-option {
    transition: all 0.2s ease;
    
    &:hover {
      background: rgba(255, 255, 255, 0.2);
      transform: translateX(4px);
    }
    
    &.easy {
      border-left: 4px solid #10b981;
    }
    
    &.medium {
      border-left: 4px solid #f59e0b;
    }
    
    &.hard {
      border-left: 4px solid #ef4444;
    }
  }
}

// Button hover effects
.btn-primary {
  background: linear-gradient(135deg, #10b981, #3b82f6);
  transition: all 0.2s ease;
  
  &:hover {
    background: linear-gradient(135deg, #059669, #2563eb);
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
  }
  
  &:active {
    transform: translateY(0);
  }
}

// Score animation
.score-display {
  transition: all 0.3s ease;
  
  &.score-increase {
    animation: scoreIncrease 0.5s ease-out;
  }
}

@keyframes scoreIncrease {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.2);
    color: #fbbf24;
  }
  100% {
    transform: scale(1);
  }
}

// Combo indicator
.combo-indicator {
  animation: pulseCombo 0.5s ease-out;
}

@keyframes pulseCombo {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.1);
    color: #f97316;
  }
  100% {
    transform: scale(1);
  }
}

// High score table
.high-score-table {
  .score-row {
    transition: all 0.2s ease;
    
    &:hover {
      background: rgba(255, 255, 255, 0.15);
      transform: translateX(4px);
    }
    
    &.rank-1 {
      background: linear-gradient(135deg, rgba(255, 215, 0, 0.2), rgba(255, 215, 0, 0.1));
    }
    
    &.rank-2 {
      background: linear-gradient(135deg, rgba(192, 192, 192, 0.2), rgba(192, 192, 192, 0.1));
    }
    
    &.rank-3 {
      background: linear-gradient(135deg, rgba(205, 127, 50, 0.2), rgba(205, 127, 50, 0.1));
    }
  }
}

// Responsive design
@media (max-width: 768px) {
  .game-area {
    min-height: 300px;
  }
  
  .target {
    // Slightly larger targets on mobile for easier clicking
    &:hover {
      transform: scale(1.2);
    }
  }
  
  .game-stats {
    flex-direction: column;
    gap: 0.5rem;
    text-align: center;
    
    .stats-left,
    .stats-right {
      justify-content: center;
    }
  }
  
  .modal {
    margin: 1rem;
    max-height: calc(100vh - 2rem);
    overflow-y: auto;
  }
}

@media (max-width: 480px) {
  .container {
    padding-left: 1rem;
    padding-right: 1rem;
  }
  
  .game-stats {
    font-size: 0.875rem;
    
    .stats-item {
      margin: 0.25rem 0;
    }
  }
  
  .target {
    // Even larger targets on small screens
    transform: scale(1.1);
    
    &:hover {
      transform: scale(1.3);
    }
  }
}

// Accessibility improvements
@media (prefers-reduced-motion: reduce) {
  .target,
  .toast,
  .modal,
  .btn-primary {
    animation: none;
    transition: none;
  }
  
  .target:hover {
    transform: none;
  }
}

// Dark theme adjustments (if needed)
@media (prefers-color-scheme: dark) {
  .glass {
    background: rgba(0, 0, 0, 0.3);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }
}

// Print styles (hide interactive elements)
@media print {
  .game-area,
  .modal,
  .toast,
  button {
    display: none !important;
  }
}
